@model Pumpkin.Beer.Taste.Views.TagHelpers.PageHeadingComponent

@if (Model.ChildContent != null)
{
    <div class="d-flex justify-content-between align-items-center my-3">
        <h3 class="display-3">@Model.Heading</h3>
        @Model.ChildContent
    </div>
}
else
{
    <div class="my-3">
        <h3 class="display-3">@Model.Heading</h3>
    </div>
}
