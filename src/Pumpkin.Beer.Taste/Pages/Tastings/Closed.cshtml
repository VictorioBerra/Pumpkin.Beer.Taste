@page
@model Pumpkin.Beer.Taste.Pages.Tastings.ClosedModel

<page-heading heading="Closed Tastings">
    <a asp-area="" asp-page="/Index">open tastings</a>
</page-heading>

<div class="mt-3">
    @if (!Model.ClosedBlinds.Any())
    {
        <div class="card border-primary">
            <div class="card-body">
                <h5 class="card-subtitle pb-2">You have no closed tastings yet.</h5>
            </div>
        </div>
    }
    else
    {
        <ul class="list-unstyled">
            @foreach (var blind in Model.ClosedBlinds)
            {
                <li>
                    <div class="card border-primary mb-2">
                        <div class="card-body">
                            <h5 class="card-title">@blind.Name</h5>
                            <p>@blind.Started.ToString("dddd, dd MMMM yyyy")</p>
                            <div class="d-grid gap-2">
                                <a asp-area="" asp-page="/Scores/Index" asp-route-id="@blind.Id" class="btn btn-primary">See Scores</a>
                            </div>
                        </div>
                    </div>
                </li>
            }
        </ul>
    }
</div>
