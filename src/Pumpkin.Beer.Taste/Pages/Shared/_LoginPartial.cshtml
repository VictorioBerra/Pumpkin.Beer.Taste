@using Microsoft.AspNetCore.Identity

<div class="collapse navbar-collapse" id="navbarSupportedContent">
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <partial name="_NavLinksPartial" />

            <li class="nav-item">
                <a class="nav-link active" asp-area="" asp-page="/ManageBlind/Index">Create/Manage Tastings</a>
            </li>
        </ul>

        <div class="d-flex text-white">
            <div class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    @User.Identity!.Name
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item text-black" asp-area="Identity" asp-page="/Account/Profile">Edit Profile</a></li>
                    <li><a class="dropdown-item text-black" asp-area="Identity" asp-page="/Account/Logout">Logout</a></li>
                </ul>
            </div>
        </div>
    }
    else
    {
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <partial name="_NavLinksPartial" />
        </ul>
        <span>
            <a class="nav-link text-light" asp-area="" asp-page="/Account/Login">Login/Register</a>
        </span>
    }
</div>
