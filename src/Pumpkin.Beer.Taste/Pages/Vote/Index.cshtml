@page
@model Pumpkin.Beer.Taste.Pages.VotePages.IndexModel

@{
    ViewData["Title"] = "All Blinds";
}

<h2>@(Model.BlindItem.Blind.Name)</h2>
@if (Model.BlindItem.Blind.Closed != null)
{
    <h4>Ends in (@Model.BlindItem.Blind.Closed?.Humanize())</h4>
}
else
{
    // Never ends...
}
<hr />


@if (Model == null)
{
    <div>
        <h2>Thats it!</h2>
        <p>You have either voted on all items in this blind taste test, or, the author never added any items.</p>
        <a href="/">Home</a>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-12">
            <form method="post" onsubmit="return confirm('Once you submit, you can never go back!');">
                <div class="form-group">
                    <label>1 being the worst vote possible, 5 being the best.</label>
                    <ul class="list-group list-group-horizontal" style="width: 100%;">
                        <li class="list-group-item w-100">
                            <label><input type="radio" /> 1 - Ew</label>
                        </li>
                        <li class="list-group-item w-100">
                            <label><input type="radio" /> 2 - Meh</label>
                        </li>
                        <li class="list-group-item w-100">
                            <label><input type="radio" /> 3 - Notsobad</label>
                        </li>
                        <li class="list-group-item w-100">
                            <label><input type="radio" /> 4 - Pretty good!</label>
                        </li>
                        <li class="list-group-item w-100">
                            <label><input type="radio" /> 5 - Holy shitballs</label>
                        </li>
                    </ul>
                </div>
                <div class="form-group">
                    @*<label asp-for="Blind.Name" class="control-label"></label>
                    <input asp-for="Blind.Name" class="form-control" />
                    <span asp-validation-for="Blind.Name" class="text-danger"></span>*@
                </div>
                <button class="btn btn-warning btn-block">Submit</button>
            </form>
        </div>
</div>
            }
