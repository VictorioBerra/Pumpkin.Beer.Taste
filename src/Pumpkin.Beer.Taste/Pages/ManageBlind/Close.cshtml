@page
@model Pumpkin.Beer.Taste.Pages.BlindPages.CloseModel

@{
    ViewData["Title"] = "Close Blind";
}

<page-heading heading="Close" />

<div class="card border-primary mb-2">
    <div class="card-body">
        <h3 class="card-title">@Model.Blind.Name</h3>
        <span>Closes @Model.Blind.Closed.Humanize()</span>
    </div>
</div>

<h3>Are you sure you want to close?</h3>
<div>    
    <form method="post">
        <input type="hidden" asp-for="Blind.Id" />
        <input type="submit" value="Close" class="btn btn-warning" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
