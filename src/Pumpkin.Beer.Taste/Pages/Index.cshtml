@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <div class="card my-4">
        <div class="card-body">
            <h1 class="display-4 text-warning">Happy Halloween! ðŸ‘» ðŸŽƒ</h1>
            @if (!User.Identity?.IsAuthenticated ?? false)
            {
                <p>
                    Click <a asp-area="Identity" asp-page="/Account/Register">Register</a> in the upper-right or
                    <a asp-area="Identity" asp-page="/Account/Login">Login</a> to get started!
                </p>
            }
        </div>
    </div>
</div>

@if (User.Identity?.IsAuthenticated ?? false)
{
    <div class="row">

        <div class="col-md-6 pb-2">

            <h3>Open Tastings:</h3>

            @if (!Model.Blinds.Any())
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title pb-2">There are no open tastings at this time.</h5>
                        <div class="d-grid gap-2">
                            <a asp-area="" asp-page="/ManageBlind/Index" class="btn btn-lg btn-warning btn-block">Create One!</a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <ul class="list-unstyled">
                    @foreach (var blind in Model.Blinds)
                    {
                        <li>
                            <div class="card mb-2">
                                <div class="card-body">
                                    <h5 class="card-title">@blind.Name</h5>
                                    <p class="card-text">Closes @blind.Closed?.ToLocalTime().Humanize()!</p>
                                    @* TODO: edit button if owner *@
                                    <a asp-area="" asp-page="/Vote/Index" asp-route-id="@blind.Id" class="btn btn-lg btn-warning btn-block">Start Tasting!</a>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            }

        </div>

        <div class="col-md-6">
            <h3>Closed Tastings:</h3>

            @if (!Model.ClosedBlinds.Any())
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">You have no closed tastings yet.</h5>
                    </div>
                </div>
            }
            else
            {
                <ul class="list-unstyled">
                    @foreach (var blind in Model.ClosedBlinds)
                    {
                        <li>
                            <div class="card mb-2">
                                <div class="card-body">
                                    <h5 class="card-title">@blind.Name</h5>
                                    <p class="card-text">@blind.Started?.ToString("dddd, dd MMMM yyyy")</p>
                                    <a asp-area="" asp-page="/Scores/Index" asp-route-id="@blind.Id" class="btn btn-lg btn-warning btn-block">See Scores</a>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            }
        </div>

    </div>
}
